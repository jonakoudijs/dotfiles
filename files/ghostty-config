# Run `ghostty +show-config --default --docs` to view a list of
# all available config options and their default values.


## -- Shell

# Specify bash integration
command = /usr/local/opt/bash
shell-integration = bash

# Inherit working directory for tabs and windows
window-inherit-working-directory = true


## -- Visual

# Change app icon
macos-icon = paper

# Change terminal theme
theme = "Ayu Mirage"

# Change terminal font
font-family = "FiraCode Nerd Font Mono"
font-thicken = true
font-thicken-strength = 255

# Set blank window title
title = " "

## -- Behaviour

# Disable confirmation that a surface should be closed before closing it
confirm-close-surface = false

# Quit after the last surface is closed
quit-after-last-window-closed = true

# Disable auto update (updated via Homebrew)
auto-update = off

# Disable clipboard paste warning
clipboard-paste-protection = false
